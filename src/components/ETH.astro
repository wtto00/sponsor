---
interface Props {
  copyText: string
}

const { copyText } = Astro.props
---

<button
  class="ml-4 mt-4 h-12 flex items-center justify-center rd-4 bg-#26335F px-10"
  tabindex="0"
  aria-label="ETH"
  data-copy-text={copyText}
>
  <img
    class="mr-2 h-5"
    src="data:image/svg+xml;base64,"
    alt="ETH"
    aria-label="pp"
  />
  ETH
</button>
